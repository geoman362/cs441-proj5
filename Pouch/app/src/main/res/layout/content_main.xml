<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:id="@+id/topright_pouch"
        android:layout_width="148dp"
        android:layout_height="108dp"
        android:layout_marginLeft="184dp"
        app:layout_constraintLeft_toLeftOf="@+id/body_pack"
        app:layout_constraintTop_toTopOf="@+id/body_pack"
        app:srcCompat="@drawable/pouch_pocket_r" />

    <ImageView
        android:id="@+id/botright_pouch2"
        android:layout_width="148dp"
        android:layout_height="108dp"
        android:layout_marginLeft="176dp"
        android:layout_marginTop="124dp"
        app:layout_constraintLeft_toLeftOf="@+id/body_pack"
        app:layout_constraintTop_toTopOf="@+id/topright_pouch"
        app:srcCompat="@drawable/pouch_pocket_r" />

    <ImageView
        android:id="@+id/body_pack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/in_app_pack" />

    <ImageView
        android:id="@+id/topleft_pouch"
        android:layout_width="151dp"
        android:layout_height="144dp"
        android:layout_marginRight="172dp"
        app:layout_constraintRight_toRightOf="@+id/body_pack"
        app:layout_constraintTop_toTopOf="@+id/body_pack"
        app:srcCompat="@drawable/pouch_pocket" />

    <ImageView
        android:id="@+id/botleft_pouch"
        android:layout_width="151dp"
        android:layout_height="144dp"
        android:layout_marginRight="164dp"
        app:layout_constraintRight_toRightOf="@+id/body_pack"
        app:layout_constraintTop_toBottomOf="@+id/topleft_pouch"
        app:srcCompat="@drawable/pouch_pocket" />

    <Button
        android:id="@+id/topleft_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/topleft_pouch"
        app:layout_constraintLeft_toLeftOf="@+id/topleft_pouch"
        app:layout_constraintRight_toRightOf="@+id/topleft_pouch"
        app:layout_constraintTop_toTopOf="@+id/topleft_pouch" />

    <Button
        android:id="@+id/botleft_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/botleft_pouch"
        app:layout_constraintLeft_toLeftOf="@+id/botleft_pouch"
        app:layout_constraintRight_toRightOf="@+id/botleft_pouch"
        app:layout_constraintTop_toTopOf="@+id/botleft_pouch" />

    <Button
        android:id="@+id/topmid_butt"
        android:layout_width="116dp"
        android:layout_height="79dp"
        android:layout_marginLeft="96dp"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="@+id/body_pack"
        app:layout_constraintTop_toTopOf="@+id/body_pack" />

    <Button
        android:id="@+id/botmid_butt"
        android:layout_width="147dp"
        android:layout_height="98dp"
        android:layout_marginLeft="84dp"
        android:layout_marginBottom="16dp"
        android:text="Button"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/body_pack"
        app:layout_constraintLeft_toLeftOf="@+id/body_pack" />

    <Button
        android:id="@+id/topright_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/topright_pouch"
        app:layout_constraintLeft_toLeftOf="@+id/topright_pouch"
        app:layout_constraintRight_toRightOf="@+id/topright_pouch"
        app:layout_constraintTop_toTopOf="@+id/topright_pouch" />

    <Button
        android:id="@+id/botright_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/botright_pouch2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/botright_pouch2"
        app:layout_constraintRight_toRightOf="@+id/botright_pouch2"
        app:layout_constraintTop_toTopOf="@+id/botright_pouch2"
        app:layout_constraintVertical_bias="0.583" />

</android.support.constraint.ConstraintLayout>